{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://fourtify-crm-api.onrender.com/api/$1"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "https://fourtify-crm-api.onrender.com/uploads/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}